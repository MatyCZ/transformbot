{
  "name": "transformbot",
  "description": "The modular and type-safe schema library for transforming values",
  "version": "0.20.0",
  "license": "MIT",
  "author": "Matej Szendi",
  "repository": {
    "type": "git",
    "url": "https://github.com/MatyCZ/transformbot.git"
  },
  "keywords": [
    "filtering",
    "modular",
    "parsing",
    "schema",
    "transformation",
    "type-safe",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier --write 'src/**/*'",
    "format:check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\" && tsc --noEmit",
    "lint:fix": "eslint \"src/**/*.ts*\" --fix",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.0.13",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
